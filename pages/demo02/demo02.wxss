.row {
}
page {
  background-color: #fff;
  padding: 0;
  margin: 0;
}
.movable-area {
  width: 100%;
  height: 60px;
}
.movable-view {
  width: 100%;
  height: 100%;
  margin-bottom: 5px;
  overflow: hidden;
  border-bottom: 1px solid #000;
}
.view-row {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  transition: all .3s;
}
.row-title {
  width: 100%;
  flex: 0 0 100%;
}
.row-del {
  width: 60px;
  padding: 0px 15px;
  height: 60px;
  color: #fff;
  background-color: red;
  white-space: nowrap;
  line-height: 60px;
  height: 100%;
}
.view-row.active {
  transform: translateX(-60px);
}