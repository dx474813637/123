/* pages/canvas/canvas.wxss */
page {
  height: 100%;
}
.can {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.tools {
  position: absolute;
  bottom: 20px;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.tools-item {
  width: 60px;
  height: 60px;
  line-height: 60px;
  color: #fff;
  background-color: #999;
  border-radius: 50%;
  text-align: center;
  font-size: 0.8rem;
  letter-spacing: 0.2rem;
}
.tools-item.bg1 {
  background-color: dodgerblue;
}
.tools-item.bg2 {
  background-color: royalblue;
}
.tools-item.bg3 {
  background-color: #f90;
}
.tools-item.bg4 {
  background-color: #ff01b3;
}