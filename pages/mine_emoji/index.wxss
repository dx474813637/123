  .page-foot{
    margin-top: 50rpx;
  }
  .title {
      display: block;
  }
  .sub {
      color: #666;
      font-size: 12px;
  }
  .add-btn {
      border: 1px solid green;
      font-size: 12px;
      line-height: 25px;
      width: 50px;
      text-align: center;
      color: green;
      margin: 10px auto 0px;
      border-radius: 5px;
  }
