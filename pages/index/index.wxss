/* pages/index/index.wxss */
page {
  width: 100%;
  height: 100%;
}
.index-nav-w {
  display: flex;
  width: 100%;
  height: 40px;
  padding: 5px;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1px solid #f7f7f7;
}
.index-nav-btn {
  width: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index-search {
  width: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index-search image {
  height: 25px;
  width: 25px;
}
.index-nav {
  width: calc(100% - 90px);
  padding: 0px 5px;
}
.index-nav-scroll {
  display: flex;
  flex-wrap: nowrap;
  height: 100%;
}
.i-n-s-item {
  white-space: nowrap;
  margin: 0px 5px;
  color: dodgerblue;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  flex: 0 0 80px;
  border-radius: 15px;
  transition: all .3s;
  text-align: center;
}
.i-n-s-item.active {
  color: #fff;
  background-color: dodgerblue;
}
.swiper {
  height: calc(100% - 90px);
}
.swiper-i-c {
  height: 100%;
}
.list-item {
  background-color: #fff;
  margin-bottom: 10px;
}
.l-banner {
  width: 100%;
  height: 0;
  padding-top: 37.5%;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
}
.l-info {
  padding: 10px;
}
.l-title {
  line-height: 30px;
  font-size: 18px;
  color: #333;
}
.l-sub {
  color: #999;
  margin-bottom: 8px;
}
.l-s-author {
  margin-right: 10px;
}
.l-expert {
  border-top: 1px solid #eee;
  padding: 8px 0px;
}
.l-expert-header {
  display: flex;
  margin-bottom: 5px;
}
.expert-avator {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid #eee;
}
.expert-info {
  margin-left: 20px;
}
.expert-name {
  font-weight: bold;
  font-size: 16px;
}
.expert-label {
  margin-left: 10px;
  background-color: #333;
  color: #f3b835;
  font-size: 12px;
  font-weight: bold;
  display: inline-block;
  line-height: 18px;
  padding: 0px 8px;
  border-radius: 3px;
}
.expert-info-sub {
  color: #999;
}
.expert-content {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #666;
  line-height: 25px;
  font-size: 16px;
  margin-bottom: 5px;
}
.l-footer {
  display: flex;
  position: relative;
}
.l-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin-top: auto;
  margin-bottom: auto;
  font-size: 14px;
  height: 20px;
}
.img-item {
  width: 25px;
  height: 25px;
  border-radius: 50%;
}
.l-num {
  line-height: 25px;
  color: #999;
  margin-left: 15px;
}
.num {
  color: dodgerblue;
}
.loading {
  text-align: center;
  margin: 10px auto;
}